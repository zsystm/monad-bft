[Unit]
Description="Service file for Monad MPT"
After=network.target

[Service]
Type=oneshot
ExecStart=/usr/local/bin/monad-mpt \
    --storage /dev/triedb \
    --create
User=monad
Group=monad
Restart=no
DeviceAllow=/dev/triedb rw
LimitNOFILE=1048576
# Hugemem configs below
LimitMEMLOCK=infinity
ProtectKernelModules=no
ProtectKernelLogs=no

[Install]
WantedBy=multi-user.target
